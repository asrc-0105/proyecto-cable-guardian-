// src/components/SensorData.js
import React, { useEffect, useState } from 'react';
import axios from 'axios';

const SensorData = () => {
  const [data, setData] = useState(null);

  useEffect(() => {
    const fetchData = async () => {
      try {
        const response = await axios.get('http://localhost:5000/api/datos', {
          auth: {
            username: 'admin',
            password: 'secret',
          },
        });
        setData(response.data.latest);
      } catch (error) {
        console.error('Error fetching data:', error);
      }
    };

    fetchData();
    const interval = setInterval(fetchData, 5000); // Refresh every 5 seconds
    return () => clearInterval(interval);
  }, []);

  return (
    <div className="sensor-data">
      <h2>Sensor Data</h2>
      {data ? (
        <table>
          <thead>
            <tr>
              <th>Temperature</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{data.temperature} Â°C</td>
            </tr>
          </tbody>
        </table>
      ) : (
        <p>Loading...</p>
      )}
    </div>
  );
};

export default SensorData;




// src/components/ControlPanel.js
import React, { useState } from 'react';
import axios from 'axios';

const ControlPanel = () => {
  const [command, setCommand] = useState('');

  const sendCommand = async () => {
    try {
      await axios.post(
        'http://localhost:5000/api/control',
        { command },
        {
          auth: {
            username: 'admin',
            password: 'secret',
          },
        }
      );
      alert('Command sent successfully');
    } catch (error) {
      console.error('Error sending command:', error);
      alert('Failed to send command');
    }
  };

  return (
    <div className="control-panel">
      <h2>Control Panel</h2>
      <input
        type="text"
        value={command}
        onChange={(e) => setCommand(e.target.value)}
        placeholder="Enter command"
      />
      <button onClick={sendCommand}>Send Command</button>
    </div>
  );
};

export default ControlPanel;





import React from 'react';
import SensorData from './components/SensorData';
import ControlPanel from './components/ControlPanel';
import './styles.css';

const App = () => {
  return (
    <div className="app">
      <header>
        <h1>Monitoring and Control Dashboard</h1>
      </header>
      <main>
        <SensorData />
        <ControlPanel />
      </main>
    </div>
  );
};

export default App;



// src/index.js
import React from 'react';
import ReactDOM from 'react-dom';
import App from './App';

ReactDOM.render(
  <React.StrictMode>
    <App />
  </React.StrictMode>,
  document.getElementById('root')
);


